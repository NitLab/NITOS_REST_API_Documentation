{
  "apiVersion": "1.0.0",
  "swaggerVersion": "1.2",
  "basePath": "#{@@basepath}",
  "resourcePath": "/channels",
  "produces": [
    "application/json"
  ],
  "authorizations": {},
  "apis": [
    {
      "path": "/channels",
      "operations": [
        {
          "method": "GET",
          "summary": "Get all channels",
          "notes": "",
          "type": "Channel",
          "nickname": "getAllChannels",
          "authorizations": {},
          "parameters": [],
          "responseMessages": [
            {
              "code": 404,
              "message": "None channel found"
            }
          ]
        },
        {
          "method": "GET",
          "summary": "Find channel by uuid",
          "notes": "",
          "type": "Channel",
          "nickname": "getChannelByUUID",
          "authorizations": {},
          "parameters": [
            {
              "name": "uuid",
              "description": "uuID of channel that needs to be fetched",
              "required": true,
              "type": "string",
              "paramType": "query"
            }
          ]
        },
        {
          "method": "GET",
          "summary": "Find Channel by Name",
          "notes": "",
          "type": "Channel",
          "nickname": "getChannelByName",
          "authorizations": {},
          "parameters": [
            {
              "name": "name",
              "description": "Name of Channel that needs to be fetched",
              "required": true,
              "type": "string",
              "paramType": "query"
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid Name supplied"
            },
            {
              "code": 404,
              "message": "Channel not found"
            }
          ]
        }
      ]
    },
    {
      "path": "/channels",
      "operations": [
        {
          "method": "POST",
          "summary": "Create a resource of type Channel",
          "notes": "",
          "type": "Channel",
          "nickname": "placeChannel",
          "authorizations": {},
          "parameters": [
            {
              "name": "body",
              "description": "order placed for creating a Channel",
              "required": true,
              "type": "Cchannel",
              "paramType": "body"
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid order"
            }
          ]
        },
        {
          "method": "PUT",
          "summary": "Update an existing Channel",
          "notes": "Give the uuid and the parameters you want to change in json's body",
          "type": "void",
          "nickname": "updateChannel",
          "authorizations": {},
          "parameters": [
            {
              "name": "body",
              "description": "Channel that needs to be updated ",
              "required": true,
              "type": "Channel",
              "paramType": "body"
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid uuID supplied"
            },
            {
              "code": 404,
              "message": "Channel not found"
            }
          ]
        },
        {
          "method": "DELETE",
          "summary": "Delete a Channel",
          "notes": "Give only the uuid of the channel you want to delete in json's body",
          "type": "void",
          "nickname": "deleteChannel",
          "authorizations": {},
          "parameters": [
            {
              "name": "body",
              "description": "Channel to be deleted in jason format",
              "required": true,
              "type": "DChannel",
              "paramType": "body"
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid uuID supplied"
            },
            {
              "code": 404,
              "message": "Channel not found"
            }
          ]
        }
      ]
    }
  ],
  "models": {
    "Channel": {
      "id": "Channel",
      "properties": {
        "uuid": {
          "type": "string",
          "required": true
        },
        "name": {
          "type": "string",
          "required": true
        },
        "href": {
          "type": "string"
        },
        "interfaces": {
          "type": "array",
          "items": {
            "$ref": "Interface"
          }
        },
        "account": {
          "$ref": "Account"
        },
        "urn":{
          "type": "string",
          "description": "Max length=>255",
          "maximum": 255
        },
        "type": {
          "type": "string"
        },
        "frequency": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "available": {
          "type": "boolean"
        },
        "status": {
          "type": "string",
          "description": "Channel Status",
          "enum": [
            "unknown",
            "ready"
          ]
        }
      }
    },
    "Interface": {
      "id": "Interface",
      "properties": {
        "uuid": {
          "type": "string"
        },
        "href": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "ip": {
          "$ref": "ip"
        }  ,
        "description": {
          "type": "string"
        },
        "link": {
          "$ref": "Link"
        } 
      }
    },
    "ip": {
      "id": "ip",
      "properties": {
        "uuid": {
          "type": "string"
        },
        "href": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "netmask": {
          "type": "string"
        },
        "ip_type": {
          "type": "string",
          "description": "type of ip",
          "enum": [
            "ipv4",
            "ipv6"
          ]
        },
        "available": {
          "type": "boolean"
        },
        "status": {
          "type": "string",
          "enum": [
            "unknown",
            "ready"
          ]
        }
      }
    },
    "Link": {
      "id": "Link",
      "properties": {
        "link_type": {
          "type": "string"
        },
        "interfaces": {
          "$ref": "Interface"
        }
      }
    },
    "Cchannel": {
      "id": "Cchannel",
      "properties": {
        "name": {
          "type": "string",
          "required": true
        },
        "interfaces": {
          "type": "array",
          "items": {
            "$ref": "Cinterface"
          }
        },
        "urn": {
          "type": "string",
          "description": "Max length=>255",
          "maximum": 255
        },
        "frequency": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        }
      }
    },
    "Cinterface": {
      "id": "Cinterface",
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "ip": {
          "$ref": "Cip"
        }   
      }
    },
    "Cip": {
      "id": "Cip",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "netmask": {
          "type": "string"
        },
        "ip_type": {
          "type": "string",
          "description": "type of ip",
          "enum": [
            "ipv4",
            "ipv6"
          ]
        }
      }
    },
    "DChannel": {
      "id": "DChannel",
      "properties": {
        "uuid": {
          "type": "string",
          "required": true
        }
      }
    }  
  }
}